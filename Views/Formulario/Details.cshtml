@model Formulario

@{
    ViewData["Title"] = "Details";
}


<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <h1>Formulario de @Html.DisplayFor(model => model.Nome)</h1>
        @foreach (var campo in Model?.Campos)
        {
            <label for="form">@campo.Nome</label>
            @if (campo.Tipo?.Nome.ToLower() == "checkbox")
            {<input name="form" type="@campo.Tipo?.Nome.ToLower()" /><br>}
            else
            {<input name="form" class="form-control" type="@campo.Tipo?.Nome.ToLower()" />}
        }
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a asp-action="Index">Back to List</a>
</div>
